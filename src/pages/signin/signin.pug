include ./../../components/input/input.pug

doctype html
html(lang="ru")
  head
    include ./../../../src/layout/head.pug
    link(rel="stylesheet", href="signin.css")
  body.body
    main.signin-form
      h1.signin-form__title Регистрация
      form.signin-form__form(action="")
        div.signin-form__input-container
          +input('Почта', 'email')(class='signin-form__input')
          +input('Логин', 'login')(class='signin-form__input')
          +input('Имя', 'first_name')(class='signin-form__input')
          +input('Фамилия', 'second_name')(class='signin-form__input')
          +input('Телефон', 'phone')(class='signin-form__input')
          +input('Пароль', 'password', 'password')(class='signin-form__input')
          +input('Пароль (ещё раз)', 'password', 'password')(class='signin-form__input')
        div.signin-form__button-container
          input(type='submit', value='Зарегистрироваться').signin-form__main-button
          a(href='./login').signin-form__registration-link Войти