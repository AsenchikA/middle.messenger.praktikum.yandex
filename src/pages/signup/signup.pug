include ./../../components/input/input.pug

doctype html
html(lang="ru")
  head
    include ./../../../src/layout/head.pug
    link(rel="stylesheet", href="../../index.css")
    link(rel="stylesheet", href="signup.css")
  body.body
    main.signup-form
      h1.signup-form__title Регистрация
      form.signup-form__form(action="")
        div.signup-form__input-container
          +input('Почта', 'email')(class='signup-form__input')
          +input('Логин', 'login')(class='signup-form__input')
          +input('Имя', 'first_name')(class='signup-form__input')
          +input('Фамилия', 'second_name')(class='signup-form__input')
          +input('Телефон', 'phone')(class='signup-form__input')
          +input('Пароль', 'password', 'password')(class='signup-form__input')
          +input('Пароль (ещё раз)', 'password', 'password')(class='signup-form__input')
        div.signup-form__button-container
          input(type='submit', value='Зарегистрироваться').signup-form__main-button
          a(href='/login').signup-form__registration-link Войти