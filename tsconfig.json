{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["./src/utils/*"],
            "@components/*": ["./src/components/*"],
            "@pages/*": ["./src/pages/*"],
            "@controllers/*": ["./src/controllers/*"]
        },
        "outDir": "dist",
        "target": "es2016",
        "declaration": false,
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["./src/**/*"]
} 